<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.erielmarimon.driftwoodsoccer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewGameActivity"
            android:label="@string/new_game_activity_label"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.PlayerDetailActivity"
            android:label="@string/player_activity_label"
            android:parentActivityName=".activities.GameDetailActivity" />
        <activity
            android:name=".activities.GameListActivity"
            android:label="@string/games_activity_label"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.GameDetailActivity"
            android:label="@string/game_details_activity_label"
            android:parentActivityName=".activities.GameListActivity" />

        <activity android:name=".activities.GroupManagementActivity">
            <meta-data android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity"/>
        </activity>

        <activity android:name=".activities.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>